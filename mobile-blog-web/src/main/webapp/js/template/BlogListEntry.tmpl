<script type="text/template" id="bloglistentry-tmpl">

<article id="post<%=data.id%>">
    <div style="padding-bottom: 10px;">
        <h2><%=data.title%></h2>

        <div style="font-size: smaller;">
            <%=data.author.firstname%> <%=data.author.surname%> - <%=data.created%>
        </div>
    </div>

    <div style="clear:both;"><%=data.content%></div>

    <div style="padding-bottom: 10px; margin: 10px 0px 30px 0px; border-bottom: 1px solid; border-color: #AAAAAA;">
        <a id="readMoreBtn<%=data.id%>" href="#">Read more &#187;</a>
    </div>
</article>

</script>